.hotlist .hotitem{
  width: 180rpx;
  height: 240rpx;
  float: left;
  margin: 21rpx;
}
.hotlist .hotitem image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
}
.hotlist .hotitem text{
  color: #888;
  font-size: 26rpx;
  width: 180rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: block;
}
/*清除浮动*/
.clearfix::after{
  content: "";
  height: 0;
  display: block;
  visibility: hidden;
  overflow: hidden;
  clear: both;
}


.canary{
  height: 50rpx;
}