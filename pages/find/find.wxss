/* pages/find/find.wxss */
.main{

  padding: 40rpx 40rpx;
}
/*顶部*/
.main .topbox{
  background-color: #f1f1f1;
  height: 80rpx;
  border-radius: 50rpx;
  overflow: hidden;
}
.topbox input{
  width: 500rpx;
  height: 80rpx;
  padding-left: 50rpx;
  float: left;
  color: #666;
}
.topbox .btn{
  width: 80rpx;
  height: 80rpx;
  float: left;
  position: relative;
}
.btn image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0; left: 5rpx;
  right: 0; bottom: 0;
  margin: auto;
}
/*热门推荐*/
.titlebox{
  height: 100rpx;
}
.titlebox .txt{
  float: left;
  font-size: 36rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
}
.titlebox .txt_r{
  float: right;
  width: 120rpx;
  height: 50rpx;
  border: 1rpx solid #888;
  text-align: center;
  color: #888;
  border-radius: 12rpx;
  margin-top: 25rpx;
}
/*
